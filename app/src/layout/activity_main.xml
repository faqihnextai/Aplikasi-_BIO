<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewNamaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faqih Baidowi"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/textViewNamaLabel"
        app:layout_constraintTop_toTopOf="@id/textViewNamaLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewNimLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textViewNamaLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewNamaLabel"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23050924"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/textViewNimLabel"
        app:layout_constraintTop_toTopOf="@id/textViewNimLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewUniversitasLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universitas:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textViewNamaLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewNimLabel"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewUniversitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universitas Yatsi Madani"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/textViewUniversitasLabel"
        app:layout_constraintTop_toTopOf="@id/textViewUniversitasLabel"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>